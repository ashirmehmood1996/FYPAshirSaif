<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ContactsInformation"
    android:weightSum="2"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_contacts_info_circle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/magnitude_circle"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:maxLength="1"
                android:text="A"
                android:textColor="@android:color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_contacts_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="10dp"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="28dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.003"
        android:background="#AFAFAF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number : "
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="6dp"/>
            <TextView
                android:id="@+id/tv_contacts_info_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+92 331 2808014"
                android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.003dp"
            android:background="#AFAFAF"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="6dp"/>
            <TextView
                android:id="@+id/tv_contacts_info_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No email found"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.003dp"
            android:background="#AFAFAF"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Member :"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_group_24dp"
                android:drawablePadding="6dp"/>

            <ListView
                android:id="@+id/listView_contacts_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:splitMotionEvents="false"
                android:divider="@null"
                android:dividerHeight="0dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.003dp"
            android:background="#AFAFAF"/>

    </LinearLayout>


</LinearLayout>