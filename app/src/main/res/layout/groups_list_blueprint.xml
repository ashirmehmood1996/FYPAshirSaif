<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_group_contact_or_groups"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="#ffffff"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#39000000"
        android:paddingBottom="10dp"
        android:layout_marginLeft="52dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >


        <LinearLayout
            android:id="@+id/ly_checkbox_mainGroups"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/checkbox_mainGroups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
           >
            <LinearLayout
                android:id="@+id/ly_display_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_groups_circle"

                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/magnitude_circle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:gravity="center"
                    android:maxLength="1"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:text="A"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group Name"
                        android:textSize="18dp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/tv_no_of_members"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:drawableLeft="@drawable/ic_group_black_24dp"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>