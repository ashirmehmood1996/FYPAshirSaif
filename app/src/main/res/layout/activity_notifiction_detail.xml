<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Activities.NotifictionDetailActivity">


    <TextView
        android:id="@+id/tv_notification_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:ellipsize="end"
        android:ems="10"
        android:hint="Compose Title"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Holiday"
        android:textColor="#000000"
        android:textSize="22sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height=".3dp"
        android:layout_below="@id/ll_history_list_item_container"
        android:background="@color/textColorConversationListItemDetail" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="To :"

                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_notification_detail_recievers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:hint="Compose Title"
                    android:padding="6dp"
                    android:text="Saif Qureshi , Ashir Mehmood , Khuwaja Mujammad Faiq , Annas Waheed , Adnan Khan Jan"
                    android:textColorHint="#b2b2b2" />

                <TextView
                    android:id="@+id/tv_notification_detail_time_stamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/background"
                    android:padding="6dp"
                    android:text="00:00 pm"
                    android:textColor="@color/textColorConversationListItemDetail"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".3dp"
            android:layout_below="@id/ll_history_list_item_container"
            android:background="@color/textColorConversationListItemDetail" />


        <TextView
            android:id="@+id/tv_notification_detail_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:textColor="#000000"
            android:textColorHint="#b2b2b2"
            android:textSize="16sp"
            tools:text="it is to notify that university" />

        <Button
            android:id="@+id/bt_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_picture_as_pdf_black_24dp"
            android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
            android:drawableEnd="@drawable/ic_remove_red_eye_black_24dp"
            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
            android:background="@drawable/background_button_focused"
            android:layout_marginBottom="6dp"
            android:drawablePadding="16dp"
            android:gravity="start|center"
            android:padding="16dp"
            tools:text="file name.pdf" />

    </LinearLayout>
</LinearLayout>